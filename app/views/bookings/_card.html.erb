<div class="col-sm my-2">
    <%= link_to booking_path(booking), class: "text-decoration-none text-black" do %>
      <div class="d-flex border my-3">
        <%= cl_image_tag booking.dragon.image.key, class: 'rounded', style: 'height: 150px; width:150px; object-fit: cover;' %>
        <div class='d-flex flex-column p-2 justify-content-start'>
            <h2 class=''>Booking #<%= booking.id.to_s.rjust(4, '0')%></h2>
              <% if booking.status == "Pending" %>
                <span class="bg-info w-50 px-2 text-center rounded-5"><%= booking.status%></span>
              <% else %>
                <span class="bg-success w-50 px-2 text-center rounded-5"><%= booking.status%></span>
              <% end %>
            <div class="pt-3">
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex justify-content-start align-items-center">
                    <%= booking.start_date.strftime('%d/%m/%Y') %>
                    <i class="fa-solid fa-arrow-right mx-2"></i>
                    <%= booking.end_date.strftime('%d/%m/%Y') %>
                </div>
              </div>
              <span><strong>Total: </strong><%= booking.total_price %>â‚¬</span>
            </div>
        </div>
      </div>
      <% end %>
</div>
