<div class="col-12 col-xl-6 my-2">
    <%= link_to booking_path(booking), class: "text-decoration-none text-black" do %>

      <div class="d-flex border shadow">

        <%= cl_image_tag booking.dragon.image.key, style:'min-width:150px; min-height:150px; width:150px; height:150px; object-fit:cover;' %>

        <div class='d-flex flex-column justify-content-between w-100 p-3'>
            <div class="d-flex flex-wrap justify-content-between mb-3">
              <div>
                <h3 class='mb-1'>Booking #<%= booking.id.to_s.rjust(4, '0')%></h3>
                <p class="mb-0">
                  <i class="fa-solid fa-location-dot text-danger"></i>
                  <%= booking.dragon.location %>
                  <i class="fa-solid fa-clock text-warning ms-2"></i>
                  <%= booking.duration > 1 ? "#{booking.duration} days" : "#{booking.duration} day" %>
                </p>
              </div>
              <div>
                <% if booking.status == "Pending" %>
                  <span class="bg-info px-2 text-center rounded-5"><%= booking.status%></span>
                <% else %>
                  <span class="bg-success px-2 text-center rounded-5"><%= booking.status%></span>
                <% end %>
              </div>
            </div>

            <div class="d-flex flex-wrap justify-content-between">
              <div>
                <div class="d-flex justify-content-start align-items-center me-2">
                    <%= booking.start_date.strftime('%d/%m/%Y') %>
                    <i class="fa-solid fa-arrow-right mx-2"></i>
                    <%= booking.end_date.strftime('%d/%m/%Y') %>
                </div>
              </div>
              <div>
                <h5 class='mb-0'><%= booking.total_price %>â‚¬</h5>
              </div>
            </div>

        </div>
      </div>
      <% end %>
</div>
