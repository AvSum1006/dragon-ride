<div class="container">
  <div class="text-center p-2">
    <h1 style="font-weight: bold">All our dragons</h1>
  </div>
  <div class="input-group border m-1" style="border-radius: 150px;">
    <input type="search" class="form-control border-0 bg-white" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
    <span class="input-group-text border-0 rounded-circle" id="search-addon">
      <i class="fas fa-search "></i>
    </span>
  </div>
  <div class="row justify-content-center">
    <% @dragons.each do |dragon| %>
      <div class="col my-2">
        <div class="border rounded shadow" style="width: auto; height: 500px; object-fit: contain;">
          <%= link_to dragon_path(dragon) do %>
            <%= image_tag("smaug.webp", class: "card-img-top rounded", style: "height: 300px; object-fit:cover") %>
          <% end %>
          <div style="height: 200px">
            <div class="d-flex flex-column border-top p-2">
              <p class="mb-0" style="font-weight: bold; font-size: 24px; overflow: hidden;text-overflow: ellipsis;"><%= dragon.name %></p>
              <p class="mb-0" style="font-weight: bold; font-size: 18px;"><%= dragon.seats %> seats</p>
            </div>
            <div class="d-flex justify-content-between p-2">
              <p><strong>Location: </strong><br><%= dragon.location %></p>
              <p><strong>Price: </strong><br><%= dragon.price_per_day %>â‚¬/day</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
